# i3vm controls:
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Mode to launch applications:
set $mode_apps Launch: [t]erminal [a]tom [s]martgit [g]oogle slac[k] [f]irefox t[h]underbird trans[m]ission [c]lementine [n]autilus s[e]cpanel [q]tpass [l]ibreoffice pa[v]ucontrol [w]orkbench
mode "$mode_apps" {
    bindsym t exec terminator -l grid, mode "default"
    bindsym f exec firefox, mode "default"
    bindsym h exec thunderbird, mode "default"
    bindsym a exec atom, mode "default"
    bindsym s exec /usr/share/smartgit/bin/smartgit.sh, mode "default"
    bindsym c exec clementine, mode "default"
    bindsym g exec google-chrome-stable, mode "default"
    bindsym k exec slack, mode "default"
    bindsym m exec transmission-gtk, mode "default"
    bindsym n exec nautilus, mode "default"
    bindsym e exec secpanel, mode "default"
    bindsym q exec qtpass, mode "default"
    bindsym l exec libreoffice, mode "default"
    bindsym v exec pavucontrol, mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+a mode "$mode_apps"

# Mode to start workspaces:
set $mode_restore_workspaces Start Workspace: [b]ase [t]erms [c]omms [m]edias [w]ww [d]ev [v]irt
mode "$mode_restore_workspaces" {
    bindsym b exec i3ctl --restore workspace --workspace base, mode "default"
    bindsym t exec i3ctl --restore workspace --workspace terms, mode "default"
    bindsym c exec i3ctl --restore workspace --workspace comms, mode "default"
    bindsym m exec i3ctl --restore workspace --workspace medias, mode "default"
    bindsym w exec i3ctl --restore workspace --workspace www, mode "default"
    bindsym d exec i3ctl --restore workspace --workspace dev, mode "default"
    bindsym v exec i3ctl --restore workspace --workspace virt, mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+w mode "$mode_restore_workspaces"

# Mode to save workspaces:
set $mode_save_workspaces Save Workspace: [b]ase [t]erms [c]omms [m]edias [w]ww [d]ev [v]irt
mode "$mode_save_workspaces" {
    bindsym b exec i3ctl --save workspace --workspace base, mode "default"
    bindsym t exec i3ctl --save workspace --workspace terms, mode "default"
    bindsym c exec i3ctl --save workspace --workspace comms, mode "default"
    bindsym m exec i3ctl --save workspace --workspace medias, mode "default"
    bindsym w exec i3ctl --save workspace --workspace www, mode "default"
    bindsym d exec i3ctl --save workspace --workspace dev, mode "default"
    bindsym v exec i3ctl --save workspace --workspace virt, mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+Shift+w mode "$mode_save_workspaces"

# Mode to start profiles:
set $mode_restore_profiles Start Profile: [c]itymeo [h]ome
mode "$mode_restore_profiles" {
    bindsym c exec i3ctl --restore profile --profile citymeo, mode "default"
    bindsym h exec i3ctl --restore profile --profile home, mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+p mode "$mode_restore_profiles"

# Mode to save profiles:
set $mode_save_profiles Save Profile: [c]itymeo [h]ome
mode "$mode_save_profiles" {
    bindsym c exec i3ctl --save profile --profile citymeo, mode "default"
    bindsym h exec i3ctl --save profile --profile home, mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+Shift+p mode "$mode_save_profiles"

# Mode for session/power control:
set $mode_session Lock: [l]ock l[o]gout [s]witch sus[p]end [h]ibernate [r]eboot sh[u]tdown
mode "$mode_session" {
    bindsym l exec i3lock -t -i ~/Images/debian_9_stretch.png, mode "default"
    bindsym o exec i3-msg exit, mode "default"
    bindsym s exec dm-tool switch-to-greeter, mode "default"
    bindsym p exec i3lock -t -i ~/Images/debian_9_stretch.png && systemctl suspend, mode "default"
    bindsym h exec i3lock -t -i ~/Images/debian_9_stretch.png && systemctl hibernate, mode "default"
    bindsym r exec systemctl reboot
    bindsym u exec systemctl poweroff
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_session"

